<% layout('/layout') %>
<% block('title', 'Book Trading Club')%>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script type="text/javascript" src="" defer></script>
<script src="/script.js" defer></script>
<div>
  <h2> Welcome <%= userN[0].person %></h2>
  <br>

    <form method="post"   action="/search">
      <fieldset class="form-group">
        <input name="title" type="text" placeholder="Title" value="" class="form-control">
      </fieldset>
      <button id="text" type="submit" value="Submit" class="btn btn-primary">Search</button><a href="/" class="btn btn-default">Cancel</a>
    </form> 
            <hr>
<br>
<br>
    <div class="container">
        <div class="row bkcvr">
        <div id="book_cover"></div>
    </div>
    </div>



       <div class="container"> 
            <h4 class="myrequest">My Book Requests <%=myrequest.length %></h4>
            <hr> 
             <div class="row">     
                <div id="book_request"></div>   
                    <% myrequest.forEach(function(myreq){ %>
             <ul class="myrequestlist" >
                 <div > 
                     <li>
                       <div class="wrapper"> 
                        <h5><%= myreq.title %>: <%= myreq.author %> </h5> 
                        <a class="btn-small remove1" id="<%= myreq.title %>" onClick='remove(this);' name="<%= myreq.author %> "><span class="glyphicon glyphicon-remove"></span> </a>                  
                        </div>
                     <li>
                 </div>
             </ul>
                    <% }) %> 
           </div>
    </div>


 <div class="container"> 
          <h4 class="requestfrom"> Requests From Others <%=requestfrom.length %></h4>
           <hr> 
        <div class="row">
            <% requestfrom.forEach(function(reqfrm){ %>
            <ul class="from"> 
                 <div> 
                 <li>
                <div class="wrapper"> 
                    <a class="btn-small ok" id="<%= reqfrm.title %>" onClick='letMhaveIt(this);' name="<%= reqfrm.author %> "><span class="glyphicon glyphicon-ok"></span> </a>
                
                   <h5><%= reqfrm.title %>:  <%= reqfrm.author %> </h5>
                    </div> 
                 <div class="wrapper"> 
                    <a class="btn-small remove2" id="<%= reqfrm.title %>" onClick='decline(this);' name="<%= reqfrm.author %> "><span class="glyphicon glyphicon-remove"></span> </a>
                 </div>  
                 </li>      
           </ul>
              <% }) %> 
        </div> 
   </div>
  </div>
    <span class="checkerror"></span>
    <br>
</div>


<div class="container"> 
     <h3> Book Club Library </h3>
      <div class="row" id="main">
        <div id="book_group">
            <% library.forEach(function(lib){ %>
          <ul>
            <div class="col-xs-6 col-xs-2"> 
            <li> 
              <div class="wrapper"> 
                <img src=<%= lib.img %>  width=120> <a class="btn-small transfer" id="<%= lib.title %>" onClick='reQuest(this);' name="<%= lib.author %>"  ><span class="glyphicon glyphicon-transfer"></span></a>
                </div>
                <h5> <%= lib.title %> </h5>
                <p> <%= lib.author %> </p> 
            </li>
            </div> 
         </ul>
             <% }) %> 
       </div> 
    </div> 
</div> 

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js" ></script>